<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apps.Mounir" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KhalaifAntalyaChat"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.apps.Mounir.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.apps.Mounir.ui.LogInActivity"
            android:label="@string/title_activity_log_in"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.apps.Mounir.ui.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.apps.Mounir.ui.ChatActivity"
            android:label="@string/title_activity_chat"
            android:parentActivityName="com.apps.Mounir.ui.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.apps.Mounir.ui.MainActivity" />
        </activity>
    </application>

</manifest>
